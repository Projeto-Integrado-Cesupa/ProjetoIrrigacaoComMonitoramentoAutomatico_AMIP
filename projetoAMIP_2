#include<LiquidCrystal.h>
#include <dht.h>
dht DHT;

#define PIN_SensorDeUmidade A0
#define PIN_SensorDHT11 7

int valorLidoUmidade; 
String mensagem1;
String mensagem2;

LiquidCrystal lcd(12, 11, 5, 4, 3, 2);

void setup(){
	pinMode(PIN_SensorDeUmidade, INPUT);
  lcd.begin(16, 2);
	Serial.begin(9600);
  delay(1000);    
  }
 
void loop(){  
	umidadeDaTerra(); 
  display(); 
  temperatura(); 
  umidadeDoAr();
  display();   
}

void umidadeDaTerra(){  
  //Serial.print("Valor da porta analogica: ");
	//Serial.println(analogRead(PIN_SensorDeUmidade));
  valorLidoUmidade = constrain(analogRead(PIN_SensorDeUmidade),666,1023); 
	valorLidoUmidade = map(valorLidoUmidade,666,1023,100,0);
  Serial.print("Umidade do Solo =  ");
	Serial.print(valorLidoUmidade); 
  Serial.println("%\n");
  mensagem1 ="Umidade do Solo:";
  mensagem2 = String(valorLidoUmidade)+"%";
}

void umidadeDoAr() {
  int chk1 = DHT.read11(PIN_SensorDHT11);
  //Serial.println("Umidade do Ar =   " + String(chk)+" %");
  mensagem1 = "Umidade do Ar:";
  int hum = DHT.humidity;
  mensagem2 = String(hum) + "%";
}
//lcd.write(B11011111)
void temperatura() {
  int chk2 = DHT.read11(PIN_SensorDHT11);
  Serial.println("Temperatura =   " + String(DHT.temperature)+" Â°C");  
  int temp = DHT.temperature;
  mensagem2 = String(temp);
  lcd.setCursor(0,0); 
  lcd.print("Temperatura:"); 
  lcd.setCursor(0,1);           
  lcd.print(mensagem2);
  lcd.write(B11011111);
  lcd.print("C");
  delay(3000);
  lcd.clear();     
}

void display() {
  lcd.setCursor(0,0);          
  lcd.print(mensagem1); 
  lcd.setCursor(0,1);           
  lcd.print(mensagem2);
  delay(3000);
  lcd.clear();
}

